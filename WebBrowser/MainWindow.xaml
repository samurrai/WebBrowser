<Window x:Class="WebBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebBrowser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Name="tabs" HorizontalAlignment="Left" Height="419" Margin="-1,0,0,0" VerticalAlignment="Top" Width="793">
            <TabItem Name="currentTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Новая вкладка"/>
                        <Button Content="x" Click="CloseTab" BorderBrush="White" Background="White" Foreground="#FF858585" Focusable="False"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Button Click="AddTab" Content="+" Background="White" BorderBrush="White" Focusable="False"/>
                </TabItem.Header>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
